<!doctype html>
<html lang="<%- page.language %>" prefix="og: http://ogp.me/ns# video: http://ogp.me/ns/video# ya: http://webmaster.yandex.ru/vocabularies/">
<head>

    <% include includes/head.ejs %>

</head>
<body class="class_body">

<div class="new_top_menu" id="new_top_menu">
    <div class="line">
        <div class="right">
            <div class="search">
                <form action="/<%- page.urls.search %>/title" name="searchform" method="get">
                    <input type="text" class="search_inp" name="q" autocomplete="off" placeholder="Поиск на сайте..."/>
                    <input type="submit" class="search_but" value="" rel="nofollow"/>
                </form>
            </div>
            <% page.urls.years.slice(0,1).forEach(function(year) { %>
            <div class="login">
                <a href="<%- year.url %>" rel="nofollow" class="new_films"></a>
            </div>
            <% }); %>
        </div>
    </div>
</div>

<div id="hv2_1">

    <div class="brand_back"></div>
    <div class="brand_back_wrap"></div>

    <div id="hv2_2">

        <div id="hv2_4">

            <div id="wrapper">

                <div id="header">

                    <% include includes/header.ejs %>

                </div>

                <div id="container">

                    <div class="con1 ">
                        <div class="con2">
                            <div class="con3">
                                <div class="con4">
                                    <div class="con5">

                                        <div id="left">

                                            <% include includes/left.ejs %>

                                        </div>

                                        <div id="center" class="aviable_showfull">

                                            <div class="bl_seo_txt_h bl_seo_txt_h_categ_sb">
                                                <div class="bl_seo_txt_bl_2">
                                                    <div class="tit_speedbar">
                                                        <span id="cinemapress-speedbar">
                                                            <span>
                                                                <a href="/" rel="nofollow">
                                                                    Главная
                                                                </a>
                                                            </span>
                                                            <% if (movie.genre_url) { %>
                                                            <span class="separ"></span>
                                                            <span>
                                                                <%- movie.genre_url %>
                                                            </span>
                                                            <% } %>
                                                            <span class="separ"></span>
                                                            <span>
                                                                <%= movie.title %>
                                                            </span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div id="cinemapress-content">

                                                <div class="sh0">
                                                    <div class="sh1">
                                                        <div class="sh2">
                                                            <div class="sh17">
                                                                <div class="sh18">
                                                                    <%- movie.year %>
                                                                </div>
                                                            </div>
                                                            <h1>
                                                                <%= movie.title %>
                                                            </h1>
                                                        </div>
                                                    </div>
                                                    <% if (movie.premiere) { %>
                                                    <div class="sh4">
                                                        <div class="sh5">
                                                            <div class="sh6">
                                                                <div class="sh9">Релиз: <%- movie.premiere %></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                    <div class="sh15">

                                                        <div class="posterfull">
                                                            <img src="<%- movie.poster %>" alt="<%= movie.title %> <%- movie.year %> постер">
                                                        </div>
                                                        <% if (page.urls.movies.online) { %>
                                                        <div class="fullplaybtn"><a href="<%- movie.url %>/<%- page.urls.movies.online %>" class="btn_viewfilm" rel="nofollow"></a></div>
                                                        <% } %>

                                                        <ul class="fullinfo">
                                                            <% if (movie.year_url) { %>
                                                            <li><b>Год выпуска:</b> <%- movie.year_url %></li>
                                                            <% } %>
                                                            <% if (movie.countries_url) { %>
                                                            <li class="bg"><b>Страна:</b> <%- movie.countries_url %></li>
                                                            <% } %>
                                                            <% if (movie.genres_url) { %>
                                                            <li><b>Жанр:</b> <%- movie.genres_url %></li>

                                                            <% } %>
                                                            <% if (movie.directors_url) { %>
                                                            <li class="bg"><b>Режиссер:</b> <%- movie.directors_url %></li>
                                                            <% } %>
                                                            <% if (movie.kp_rating) { %>
                                                            <li><b>Рейтинг КиноПоиск:</b> <%- movie.kp_rating/10 %> (<%- movie.kp_vote %>)</li>
                                                            <% } %>
                                                            <% if (movie.imdb_rating) { %>
                                                            <li class="bg"><b>Рейтинг IMDb:</b> <%- movie.imdb_rating/10 %> (<%- movie.imdb_vote %>)</li>
                                                            <% } %>
                                                            <% if (movie.quality) { %>
                                                            <li><b>Качество:</b> <%- movie.quality %></li>
                                                            <% } %>
                                                            <% if (movie.translate) { %>
                                                            <li class="bg"><b>Перевод:</b> <%- movie.translate %></li>
                                                            <% } %>
                                                        </ul>

                                                        <div class="clearfix"></div>

                                                        <% if (movie.actors_url) { %>
                                                        <div class="n_actors">
                                                            <div class="n_l">Актеры:</div>
                                                            <div class="n_r"><%- movie.actors_url %></div>
                                                        </div>
                                                        <% } %>

                                                        <div class="clearfix"></div>

                                                        <% if (movie.description) { %>
                                                        <div class="fulldisc">
                                                            <div class="title op">
                                                                Описание:
                                                            </div>
                                                            <div style="display:inline;">
                                                                <%- movie.description %>
                                                            </div>
                                                        </div>
                                                        <% } %>

                                                        <div style="clear:both"></div>

                                                        <div class="episodesListBlock" style="display: none; margin: 10px auto">
                                                            <h3><%= movie.title %> новые серии</h3>
                                                            <div id="episodesList" data-id="<%- movie.kp_id %>"></div>
                                                        </div>

                                                        <h2><%= movie.title %> <%- movie.year %></h2>

                                                        <br/>

                                                        <% if (typeof page.adv === 'object' && page.adv.over) { %>
                                                        <div style="text-align: center; margin: 10px auto">
                                                            <%- page.adv.over %>
                                                        </div>
                                                        <% } %>

                                                        <div class="section">
                                                            <% if (page.urls.movies.online || page.urls.movies.trailer) { %>
                                                            <ul class="tabz">
                                                                <% if (page.urls.movies.online) { %>
                                                                <li>
                                                                    <a href="<%- movie.url %>/<%- page.urls.movies.online %>">
                                                                        Онлайн
                                                                    </a>
                                                                </li>
                                                                <% } %>
                                                                <% if (page.urls.movies.trailer) { %>
                                                                <li>
                                                                    <a href="<%- movie.url %>/<%- page.urls.movies.trailer %>">
                                                                        Трейлер
                                                                    </a>
                                                                </li>
                                                                <% } %>
                                                            </ul>
                                                            <% } %>
                                                            <div>
                                                                <div class="box visible" style="width: 100%; height: 370px; border-radius: 10px; background: transparent;overflow: hidden;">
                                                                    <%- page.player %>
                                                                </div>
                                                            </div>

                                                            <div class="line_rating_n">
                                                                <div class="watchLaterBlock" style="display: none;">
                                                                    <a href="javascript:void(0)" id="watchLater" class="watchlater">
                                                                        Досмотреть позже
                                                                    </a>
                                                                </div>
                                                                <div class="social-likes" data-counters="no">
                                                                    <div class="facebook" title="Поделиться ссылкой на Фейсбуке"></div>
                                                                    <div class="twitter" title="Поделиться ссылкой в Твиттере"></div>
                                                                    <div class="vkontakte" title="Поделиться ссылкой во Вконтакте"></div>
                                                                    <div class="odnoklassniki" title="Поделиться ссылкой в Одноклассниках"></div>
                                                                    <div class="plusone" title="Поделиться ссылкой в Гугл-плюсе"></div>
                                                                </div>
                                                            </div>

                                                            <div style="clear:both;"></div>

                                                            <% if (movie.pictures.length) { %>
                                                            <div style="margin: 10px auto; text-align: center;" id="lightgallery">
                                                                <% movie.pictures.forEach(function (picture) { %>
                                                                <% var ahref = page.urls.movies.picture
                                                                        ? movie.url + '/' + page.urls.movies.picture
                                                                        : picture.picture_big %>
                                                                <a href="<%- ahref %>"><img src="<%- picture.picture_min %>" alt="<%= movie.title %> <%- movie.year %> кадры" title="<%= movie.title %>"></a>
                                                                <% }); %>
                                                            </div>
                                                            <% if (!page.urls.movies.picture) { %>
                                                            <link href="/themes/default/public/desktop/css/lightgallery.min.css" rel="stylesheet">
                                                            <script src="/themes/default/public/desktop/js/lightgallery.min.js"></script>
                                                            <script>lightGallery(document.getElementById('lightgallery'));</script>
                                                            <% } %>
                                                            <% } %>

                                                            <div style="clear:both;"></div>

                                                            <% if (page.urls.movies.download) { %>
                                                            <div class="tor_down">
                                                                <a href="<%- movie.url %>/<%- page.urls.movies.download %>" rel="nofollow" class="bl_s_nh">
                                                                    <h3>Скачать фильм бесплатно </h3>
                                                                </a>
                                                                <div class="tor_title">
                                                                    <a href="<%- movie.url %>/<%- page.urls.movies.download %>">через torrent</a>
                                                                </div>
                                                            </div>
                                                            <% } %>

                                                            <div style="clear:both;"></div>

                                                        </div>

                                                        <div class="clearfix"></div>

                                                        <% if (typeof page.adv === 'object' && page.adv.under) { %>
                                                        <div style="text-align: center; margin: 10px auto">
                                                            <%- page.adv.under %>
                                                        </div>
                                                        <% } %>

                                                        <% if (page.seo) { %>
                                                        <div class="fulldisc" style="margin: 10px auto;">
                                                            <div style="display:inline;">
                                                                <%- page.seo %>
                                                            </div>
                                                        </div>
                                                        <% } %>

                                                        <% if (typeof contents === 'object' && contents.length) { %>
                                                        <div style="clear: both"></div>
                                                        <% contents.forEach(function (content) { %>
                                                        <div class="cinemapress-news-block">
                                                            <div style="margin: 0; padding: 10px">
                                                                <a href="<%- content.url %>" class="cinemapress-news" style="background-image:url(<%- content.image %>);">
                                                                    <div class="cinemapress-news-title">
                                                                        <%= content.title %>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <% }); %>
                                                        <div style="clear: both"></div>
                                                        <% } %>

                                                    </div>

                                                </div>

                                                <% if (typeof movies === 'object') {
                                                        for (var type in movies) {
                                                if (movies.hasOwnProperty(type) && movies[type].length) {
                                                movies[type].forEach(function (category) {  %>
                                                <div class="relatnews_tit">
                                                    <div class="titlereln">
                                                        <h4>
                                                            <%- category.name %>
                                                        </h4>
                                                    </div>
                                                </div>
                                                <div class="relatnews">
                                                    <div class="slider1">
                                                        <% if (category.movies.length) {
                                                        category.movies.forEach(function (movie) {  %>
                                                        <div class="slide">
                                                            <div class="imgbox">
                                                                <div class="img">
                                                                    <a href="<%- movie.url %>" rel="nofollow">
                                                                        <img src="<%- movie.poster %>" alt="<%= movie.title %> <%- movie.year %>"/>
                                                                    </a>
                                                                </div>
                                                                <div class="reltexta">
                                                                    <a href="<%- movie.url %>"><%= movie.title %> <%- movie.year %></a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% }); } %>
                                                    </div>
                                                </div>
                                                <% }); } } } %>

                                            </div>

                                            <div class="clearfix"></div>

                                            <% if (page.comments) { %>
                                            <%- page.comments %>
                                            <% } %>

                                            <div class="clearfix"></div>

                                        </div>

                                        <div id="right">

                                            <% include includes/right.ejs %>

                                        </div>

                                        <div class="clear"></div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="recentlyViewedBlock" style="margin: 25px; display: none;">
                    <div>Вы надавно смотрели:</div>
                    <div id="recentlyViewed"></div>
                </div>

                <div id="spacer"></div>

            </div>

            <div id="footer">

                <% include includes/footer.ejs %>

            </div>

        </div>

    </div>

</div>

</body>
</html>