<!doctype html>
<html lang="<%- page.language %>">
<head>

    <%- include('includes/head.ejs'); -%>

</head>
<body class="class_body">

<div id="hv2_1">

    <div class="brand_back"></div>
    <div class="brand_back_wrap"></div>

    <div id="hv2_2">

        <div id="hv2_4">

            <div id="wrapper">

                <div id="header">

                    <%- include('includes/header.ejs'); -%>

                </div>

                <div id="container">

                    <div class="con1 ">
                        <div class="con2">
                            <div class="con3">
                                <div class="con4">
                                    <div class="con5">

                                        <div id="left">

                                            <%- include('includes/left.ejs'); -%>

                                        </div>

                                        <div id="center" class="aviable_main">

                                            <div class="bl_seo_txt_h" style="border-radius: 15px; margin-bottom: 10px">
                                                <div class="bl_seo_txt_bl_2">
                                                    <h1><%- page.h1 %></h1>
                                                </div>
                                            </div>

                                            <% if (page.seo) { %>
                                                <div class="bottom_descr">
                                                    <div class="bl_seo_txt bl_seo_txt_txt">
                                                        <%- page.seo %>
                                                    </div>
                                                    <div class="clear"></div>
                                                </div>
                                            <% } %>

                                            <div id="cinemapress-content">

                                                <% if (typeof index === 'object') {
                                                        for (var type in index) {
                                                if (index.hasOwnProperty(type) && index[type].length  && type !== 'episode') {
                                                index[type].forEach(function (category) { %>

                                                    <div class="bl_seo_txt_h" style="float: left; width: 100%;">
                                                        <div class="bl_seo_txt_bl_2">
                                                            <h2>
                                                                <%- category.name %>
                                                                <div class="randomMovieIndex">
                                                                    <div <% if (!category.url) { %>style="display:none"<% } %> class="cinemapress-random-index"
                                                                         onclick="window.location.href='<%- (category.url && category.url.indexOf('?')+1 ? category.url + '&random=' : category.url + '?random=') %><%- Math.random() %>'"
                                                                         title="<%= page.l.random %>">
                                                                        <img src="/themes/<%- page.theme %>/public/images/dice.svg">
                                                                    </div>
                                                                </div>
                                                            </h2>
                                                        </div>
                                                    </div>

                                                    <% if (category.movies.length) {
                                                    category.movies.forEach(function (movie) { %>

                                                        <div class="sh0">
                                                            <div class="sh1">
                                                                <div class="sh2">
                                                                    <div class="sh17">
                                                                        <div class="sh18"><%- movie.year %></div>
                                                                    </div>
                                                                    <div class="sh3">
                                                                        <a href="<%- movie.url %>"><%= movie.title %> <% if (movie.season && movie.episode) { %><%- movie.season %> <%- page.l.season %> <%- movie.episode %> <%- page.l.episode %><% } %></a>
                                                                    </div>

                                                                    <div class="favboxsh"></div>
                                                                </div>
                                                            </div>
                                                            <% if (movie.premiere) { %>
                                                                <div class="sh4">
                                                                    <div class="sh5">
                                                                        <div class="sh6">
                                                                            <div class="sh9"><%- page.l.premiere %>: <%- movie.premiere %></div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            <% } %>
                                                            <div class="sh15">
                                                                <div class="postershortbox">
                                                                    <div class="postershort">
                                                                        <a href="<%- movie.url %>">
                                                                            <div class="cinemapress-poster">
                                                                                <img src="<%- movie.poster %>" alt="<%= movie.title %> (<%- movie.year %>)" title="<%= movie.title %> (<%- movie.year %>)">
                                                                                <% if (movie.quality) { %>
                                                                                    <div class="cinemapress-quality">
                                                                                        <span class="cinemapress-svg-quality"></span>
                                                                                        <%- movie.quality %>
                                                                                    </div>
                                                                                <% } %>
                                                                                <% if (movie.translate) { %>
                                                                                    <div class="cinemapress-translate">
                                                                                        <span class="cinemapress-svg-translate"></span>
                                                                                        <%- movie.translate %>
                                                                                    </div>
                                                                                <% } %>
                                                                            </div>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <ul class="shortinfo">
                                                                    <% if (movie.year_url) { %>
                                                                        <li><strong><%- page.l.year %>:</strong> <%- movie.year_url %></li>
                                                                    <% } %>
                                                                    <% if (movie.countries_url) { %>
                                                                        <li><strong><%- page.l.countries %>:</strong> <%- movie.countries_url %></li>
                                                                    <% } %>
                                                                    <% if (movie.genres_url) { %>
                                                                        <li><strong><%- page.l.genres %>:</strong> <%- movie.genres_url %></li>
                                                                    <% } %>
                                                                    <% if (movie.directors_url) { %>
                                                                        <li><strong><%- page.l.directors %>:</strong> <%- movie.directors_url %></li>
                                                                    <% } %>
                                                                    <% if (movie.actors_url) { %>
                                                                        <li><strong><%- page.l.actors %>:</strong> <%- movie.actors_url %></li>
                                                                    <% } %>
                                                                </ul>
                                                                <% if (movie.description_short) { %>
                                                                    <div class="shortdisc" style="margin-top: 20px; text-align: justify;">
                                                                        <div style="display:inline;">
                                                                            <%- movie.description_short %>...
                                                                        </div>
                                                                    </div>
                                                                <% } %>
                                                            </div>
                                                            <div class="sh11">
                                                                <div class="sh10">
                                                            <span>
                                                                <span class="ratig-layer">
                                                                    <span style="float:left;" class="rat">
                                                                        <%- movie.rating %>%
                                                                    </span>
                                                                </span>
                                                            </span>
                                                                </div>
                                                                <div class="bf_fs_see">
                                                                    <a href="<%- movie.url %>" rel="nofollow"><%- page.l.more %> ...</a>
                                                                </div>
                                                                <div class="sh13">
                                                            <span class="item_first"><%- page.l.rating %> <%- page.l.kp %>:
                                                                <span class="num"><%- movie.kp_rating/10 %></span>
                                                            </span>
                                                                    <span class="item"><%- page.l.rating %> <%- page.l.imdb %>:
                                                                <span class="num"><%- movie.imdb_rating/10 %></span>
                                                            </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                <% }); } }); } } } %>

                                                <% if (typeof page.pagination === 'object') { %>
                                                    <div class="pagination">
                                                        <% if (page.pagination.first) { %>
                                                            <a href="<%- page.pagination.first.link %>" rel="nofollow"><%- page.pagination.first.number %></a>
                                                            <span class="nav_ext">...</span>
                                                        <% } %>
                                                        <% if (page.pagination.prev.length) { %>
                                                            <% page.pagination.prev.forEach(function (prev) { %>
                                                                <a href="<%- prev.link %>" rel="nofollow"><%- prev.number %></a>
                                                            <% }); %>
                                                            <span class="nav_ext">...</span>
                                                        <% } %>
                                                        <span><%- page.pagination.current %></span>
                                                        <% if (page.pagination.next.length) { %>
                                                            <span class="nav_ext">...</span>
                                                            <% page.pagination.next.forEach(function (next) { %>
                                                                <a href="<%- next.link %>" rel="nofollow"><%- next.number %></a>
                                                            <% }); %>
                                                        <% } %>
                                                        <% if (page.pagination.last) { %>
                                                            <span class="nav_ext">...</span>
                                                            <a href="<%- page.pagination.last.link %>" rel="nofollow"><%- page.pagination.last.number %></a>
                                                        <% } %>
                                                    </div>
                                                <% } %>

                                            </div>

                                        </div>

                                        <div id="right">

                                            <%- include('includes/right.ejs'); -%>

                                        </div>

                                        <div class="clear"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="clear"></div>

                <div class="recentlyViewedBlock" style="margin: 25px; display: none;">
                    <div><%- page.l.watched %>:</div>
                    <div id="recentlyViewed"></div>
                </div>

                <div class="clear"></div>

            </div>

            <div id="footer">

                <%- include('includes/footer.ejs'); -%>

            </div>

        </div>

    </div>

</div>

</body>
</html>